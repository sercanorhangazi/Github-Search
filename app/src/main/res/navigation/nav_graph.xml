<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/userSearchFragment">

    <fragment
        android:id="@+id/userSearchFragment"
        android:name="com.sercanorhangazi.githubsearch.ui.UserSearchFragment"
        android:label="UserSearchFragment"
        tools:layout="@layout/user_search_fragment"
        >
        <action
            android:id="@+id/action_userSearch_to_userDetails"
            app:destination="@id/userDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/userDetailsFragment"
        android:name="com.sercanorhangazi.githubsearch.ui.UserDetailsFragment"
        android:label="UserDetailsFragment"
        tools:layout="@layout/fragment_user_details">
        <argument
            android:name="login"
            app:argType="string" />
    </fragment>
</navigation>